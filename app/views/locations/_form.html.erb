<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :address %>
    <%= f.input :latitude %>
    <%= f.input :longnitude %>
    <%= f.input :home_avatar %>
    <%= f.input :verification %>
    <%= f.input :confirm %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
